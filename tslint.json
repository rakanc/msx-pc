{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "src/**/*.jsx",
      "tools/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "no-bitwise": false,
    "no-debugger": false,
    "ordered-imports": false,
    "interface-name": false,
    "object-literal-sort-keys": false,
    "javascript.validate.enable": false
  }
}
